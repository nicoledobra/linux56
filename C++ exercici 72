                                                           
#include <iostream>                                                          
#include <string>
                                                         
using namespace std;
                                                          
int main(){                                                         
    int *punt,i;                                                        
    int x[5]={1,2,3,4,5};                                                      
    punt=&x[0];                                                       
    *punt=9;                                                       
    punt[3]=7;                                                      
    for(i=0;i<5;i++){                                                      
        cout << x[i];                                                        
    }                                                        
    return 0;                                                           
}

